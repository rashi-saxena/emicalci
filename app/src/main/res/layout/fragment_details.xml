<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hp.emicalci.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">

        <TableLayout
            android:id="@+id/table_smallest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border">

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Loan Amount" />

                <TextView
                    android:id="@+id/TVamount"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234"/>
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Interest %" />

                <TextView
                    android:id="@+id/TVinterest"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234" />
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Period(Months)" />

                <TextView
                    android:id="@+id/TVmonths"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234" />
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Monthly EMI" />

                <TextView
                    android:id="@+id/TVmonthlyEmi"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234" />
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Total Interest" />

                <TextView
                    android:id="@+id/TVtotalInterest"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234" />
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="Total Payment" />

                <TextView
                    android:id="@+id/TVtotalPayment"
                    android:layout_weight="1"
                    android:background="@drawable/border2"
                    android:padding="10dp"
                    android:text="1234" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <TableRow android:background="@android:color/holo_blue_dark"
                >

                <TextView
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:text="Month"
                    android:gravity="center"/>

                <TextView
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:text="Principle"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:text="Interest"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:text="Balance"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list"
            android:visibility="invisible"/>


    </LinearLayout>

</FrameLayout>
